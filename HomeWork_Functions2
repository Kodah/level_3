#include <iostream>
#include <string>

using namespace std;

void procedure()
{
	cout << "This is a simple procedure to demonstrate the use of functions in C++." << endl;
	int a, b;
	cout << "Enter Num1: ";
	cin >> a;
	cout << "Enter Num2: ";
	cin >> b;
	cout << "The sum of " << a << " and " << b << " is: " << a + b << endl;
	cout << "***************************************************\n" << endl;
}

int func()
{
	cout << "This is a simple function to demonstrate the use of functions in C++." << endl;
	int a, b;
	cout << "Enter Num1: ";
	cin >> a;
	cout << "Enter Num2: ";
	cin >> b;
	return a + b;
}
int main()
{
	procedure();
	
	cout << "The sum of the two numbers at function is: " << func() << endl;

    return 0;
}
